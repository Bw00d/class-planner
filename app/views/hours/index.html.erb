<div class="col-sm-12 col-lg-10 center-block">
  <h1>Hours</h1>

  <table class="table delivery-table">
    <thead>
      <tr>
        <th>Date</th>
        <th>Start</th>
        <th>End</th>
        <th>Break</th>
        <th>Total</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @hours.each do |hour| %>
        <tr>
          <td><%= hour.start.to_time.strftime('%m/%d/%y') %></td>
          <td><%= hour.start.to_time.strftime('%H:%M %p') %></td>
          <td><%= hour.end.to_time.strftime('%H:%M %p') %></td>
          <td><%= hour.break %></td>
          <td><%= hour.total %></td>
          <td><%= link_to (fa_icon('eye')), hour %></td>
          <td><%= link_to (fa_icon('pencil-alt')), edit_hour_path(hour) %></td>
          <td><%= link_to (fa_icon('times')), hour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Punch Clock', new_hour_path, class: 'btn btn-small btn-success' %>
</div>