<%= form_with(model: hour, local: true) do |f| %>
  <% if hour.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(hour.errors.count, "error") %> prohibited this hour from being saved:</h2>

      <ul>
      <% hour.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :start %>
    <%= f.datetime_select :start, id: :hour_start, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :end %>
    <%= f.datetime_select :end, id: :hour_end, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :break %>
    <%= f.text_field :break, id: :hour_break, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :comment %>
    <%= f.text_area :comment, id: :hour_comment, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "SUBMIT", class: "btn btn-success" %>
  </div>
<% end %>
