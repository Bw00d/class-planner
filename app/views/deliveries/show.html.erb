<div id="delivery" class="container">
  <div class="row">
    <%= link_to 'ALL DELIVERIES', deliveries_path, class: 'btn btn-info' %>
    </br></br>
      <div class="col-sm-4">
        <strong>Course:</strong>
        <%= best_in_place @delivery, :course_number, :as => :input %>
      </div>
      <div class="col-sm-4">
        <strong>Title:</strong>
        <%= @delivery.course.title %>
      </div>
      <div class="col-sm-4">
        <strong>NWGC Equiv:</strong>
        <%= @delivery.course.course_number %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-4">
        <strong>Dates:</strong>
          <%= @delivery.start_date.try(:strftime, '%b %e') %> - <%= @delivery.end_date.try(:strftime,'%b %e, %Y') %> 
      </div>
      <div class="col-sm-4">
        <strong>Time:</strong>
        <%= best_in_place @delivery, :times, :as => :input  %>
      </div>
      <div class="col-sm-4 no-new-line">
        <strong>Location:</strong>
        <%= simple_format(@delivery.display_address) %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-4">
        <strong>Association:</strong>
        <%= @delivery.requestor %>
      </div>
      <div class="col-sm-8">
        <strong>Point of Contact:</strong>
        <%= @delivery.poc %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-4">
        <strong>Seat load:</strong>
        <%= @delivery.seat_load %>
      </div>
      <div class="col-sm-4">
        <strong>Credits:</strong>
        <%= @delivery.credits %>
      </div>
      <div class="col-sm-4">
        <strong>Fees:</strong>
        <%= @delivery.fees %>
      </div>
    </div>
  </br>
    <div>
      <span class="md-margin-right"><%#= check_box_tag 'Scheduled', @delivery.booked, @delivery.booked, disabled: true %>
        <%= best_in_place @delivery, :booked, as: :checkbox, collection: {false: fa_icon('square'), true: fa_icon('check-square')} %>
          <%= label_tag 'Scheduled' %></span>
          
        <span class="md-margin-right"><%= best_in_place @delivery, :audio_visual, as: :checkbox, collection: {false: fa_icon('square'), true: fa_icon('check-square')} %>
          <%= label_tag 'Has audio/visual' %></span>
    
        <span class="md-margin-right"><%= best_in_place @delivery, :flyer_sent, as: :checkbox, collection: {false: fa_icon('square'), true: fa_icon('check-square')} %>
          <%= label_tag 'Flyer sent' %></span>
    
        <span class="md-margin-right"><%= best_in_place @delivery, :reg_form, as: :checkbox, collection: {false: fa_icon('square'), true: fa_icon('check-square')} %>
        <%= label_tag 'Reg form' %></span>
    
        <span class="md-margin-right"><%= best_in_place @delivery, :roster, as: :checkbox, collection: {false: fa_icon('square'), true: fa_icon('check-square')} %>
        <%= label_tag 'Roster' %></span>
    
        <span class="md-margin-right"><%= best_in_place @delivery, :welcome_letter, as: :checkbox, collection: {false: fa_icon('square'), true: fa_icon('check-square')} %>
        <%= label_tag 'Welcome Letter' %></span>
    
        <span class="md-margin-right"><%= best_in_place @delivery, :agenda, as: :checkbox, collection: {false: fa_icon('square'), true: fa_icon('check-square')} %>
        <%= label_tag 'Agenda' %></span>
    
        <span class="md-margin-right"><%= best_in_place @delivery, :materials, as: :checkbox, collection: {false: fa_icon('square'), true: fa_icon('check-square')} %>
        <%= label_tag 'Materials' %></span>
    
        <span class="md-margin-right"><%= best_in_place @delivery, :certificates, as: :checkbox, collection: {false: fa_icon('square'), true: fa_icon('check-square')} %>
        <%= label_tag 'Certificates' %></span>
  
        <span class="md-margin-right"><%= best_in_place @delivery, :ta, as: :checkbox, collection: {false: fa_icon('square'), true: fa_icon('check-square')} %>  <%= label_tag 'TA' %></span>
  
        <span class="md-margin-right"><%= best_in_place @delivery, :invoiced, as: :checkbox, collection: {false: fa_icon('square'), true: fa_icon('check-square')} %>  <%= label_tag 'Invoiced' %></span>
  
        <span class="md-margin-right"><%= best_in_place @delivery, :fac, as: :checkbox, collection: {false: fa_icon('square'), true: fa_icon('check-square')} %>  <%= label_tag 'FAC' %></span>
      </div>

  </p>

  <p>
    <strong>Notes:</strong>
    <%= easy_format(@delivery.notes) %>
  </p>

  <%= link_to (fa_icon('pencil-alt')),edit_delivery_path(@delivery), class: "btn edit-button btn-info"%></br>
  </br>
  <div><%= commontator_thread(@delivery) %></div>
</div>

