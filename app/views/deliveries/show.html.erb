<%= link_to 'ALL DELIVERIES', deliveries_path, class: 'btn btn-info' %>
</br></br>
<p>
  <strong>Course:</strong>
  <%= best_in_place @delivery, :course_number, :as => :input %>
</p> 


<p>
  <strong>Course:</strong>
  <%= @delivery.course.title %>
</p>

<p>
  <strong>NWGC Equiv:</strong>
  <%= @delivery.course.course_number %>
</p>

<p>
  <strong>Dates:</strong>
  <%= @delivery.start_date.try(:strftime, '%b %e') %> - <%= @delivery.end_date.try(:strftime,'%b %e, %Y') %> 
</p>

<p>
  <strong>Time:</strong>
  <%= @delivery.times %>
</p>

<p>
  <strong>Location:</strong>
  <%= @delivery.city %>, <%= @delivery.state %>
</p>

<p>
  <strong>Requestor:</strong>
  <%= @delivery.requestor %>
</p>

<p>
  <strong>Point of Contact:</strong>
  <%= @delivery.poc %>
</p>

<p>
  <strong>Seat load:</strong>
  <%= @delivery.seat_load %>
</p>

<p>
  <strong>Credits:</strong>
  <%= @delivery.credits %>
</p>

<p>
  <strong>Fees:</strong>
  <%= @delivery.fees %>
</p>

<p>
  <%= check_box_tag 'Scheduled', @delivery.booked, @delivery.booked, disabled: true %>
  <%= label_tag 'Scheduled' %>
  <span class="md-margin-left"><%= check_box_tag 'Flyer sent', @delivery.flyer_sent, @delivery.flyer_sent, disabled: true %>
    <%= label_tag 'Flyer sent' %></span>

</p>

<p>
  <strong>Notes:</strong>
  <%= simple_format(@delivery.notes) %>
</p>

<%= link_to (fa_icon('pencil-alt')),edit_delivery_path(@delivery), class: "btn edit-button btn-info"%></br>
