<% content_for :title, @user.full_name %>

   
<div class="row">
  <div id="show-user" class="col-md-8 center-block">
    <h1><%= t('.page_title') %></h1>
    <div class="no-link-underline float-right">
      <%= render partial: 'actions', locals: {user: @user} %>
    </div>
    <div><strong>Email:</strong>  <%= @user.email %></div>
    <div><strong>Name:</strong>  <%= @user.full_name%></div>
    <div><strong>Cell:</strong>  <%= @user.cell_phone%></div>
    <div><strong>Work:</strong>  <%= @user.work_phone%></div>
    <div><strong>Role:</strong>  <%= @user.role %></div>
    <div><%= check_box_tag 'Instructor', @user.instructor, @user.instructor %>   <%= label_tag "Instructor" %></div>
    <div><strong>Lead Qualifications:</strong> 
      <ul class="qual-buttons">
       <% @lead_courses.each do |c| %>
        <li class="course-button"><%= c.find_course.course_number %></li>
       <% end %>
      </ul>
    </div>
    <div><strong>Unit Qualifications:</strong> 
  </div>
</div>